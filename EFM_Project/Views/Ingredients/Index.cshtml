@model IEnumerable<Ingredient>

@{
    ViewData["Title"] = "List Of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Ingredient_image)</th>
                    <th>@Html.DisplayNameFor(model => model.Ingredient_name)</th>
                    <th>@Html.DisplayNameFor(model => model.Unit)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.Ingredient_image" alt="@item.Ingredient_name" style="max-width: 150px">
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Ingredient_name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                        <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>